<configuration>
    <contextName>Enchiridion</contextName>
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>>%date{HH:mm:ss.SSS} [%thread] %-5level %logger{15} - %m %n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="console"/>
    </root>
</configuration>